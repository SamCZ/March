        <developerConnection>scm:git:ssh://github.com/SamCZ/March.git</developerConnection>
    </scm>

    <developers>
        <developer>
            <name>Michal Jaro≈à</name>
            <email>michalconstantine@gmail.com</email>
        </developer>
    </developers>

    <build>
